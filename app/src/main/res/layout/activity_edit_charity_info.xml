<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Charity_Info"
    android:orientation="vertical"
    android:layoutDirection="rtl">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgInfoEdit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"></com.mikhaellopez.circularimageview.CircularImageView>

        <Button
            android:id="@+id/Edit_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اضافة صورة"
            /></RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_alignParentStart="true"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اسم الجمعية"
        android:layout_marginTop="16dp"
        ></TextView>
    <EditText
        android:id="@+id/charName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="وصف الجمعية"
        android:layout_marginTop="16dp"
        ></TextView>
    <EditText
        android:id="@+id/charDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ايميل الجمعية"
        android:layout_marginTop="16dp"
        ></TextView>
    <EditText
        android:id="@+id/charEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رابط موقع الجمعية"
        android:layout_marginTop="16dp"
        ></TextView>
    <EditText
        android:id="@+id/charLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رقم هاتف الجمعية"
        android:layout_marginTop="16dp"
        ></TextView>
    <EditText
        android:id="@+id/charPho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="تعديل البيانات"
    android:id="@+id/edit1"></Button>

        </LinearLayout>
    </ScrollView>
</LinearLayout>