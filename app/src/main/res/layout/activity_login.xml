<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="@color/white"


    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Welcome"
        android:textColor="#0060FF"
        android:gravity="center"
        android:textSize="60dp"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/log"
        android:layout_gravity="center"
></ImageView>


    <EditText
        android:id="@+id/userNameL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="UserName"
        android:textColorHint="#0060FF"
        android:textColor="#0060FF"
        android:outlineSpotShadowColor="#0060FF"
        android:inputType="textAutoComplete"
        android:layout_margin="10dp"

        />
    <EditText
        android:id="@+id/PasswordL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:outlineAmbientShadowColor="#0060FF"
        android:inputType="textPassword"
        android:textColorHint="#0060FF"
        android:textColor="#0060FF"
        android:layout_margin="10dp"

        />

    <Button
        android:id="@+id/LoginB"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/a2"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:textSize="35dp"
        android:onClick="Login"
        android:textStyle="bold"
        android:textColor="#0060FF"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/signUpB"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="start"
        android:layout_marginTop="15dp"
        android:text="Not have account yet! SIGN UP NOW"
        android:textSize="15dp"
        android:textColor="#0060FF"
        android:layout_gravity="center"
        android:textColorHint="#0060FF"
        android:onClick="MoveToS"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />
    <Button
        android:id="@+id/ResetB"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Forget your password? Change HERE"
        android:textSize="15dp"
        android:textColor="#00C9FF"
        android:textColorHint="@color/teal_200"
        android:onClick="ResetPass"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />
</LinearLayout>