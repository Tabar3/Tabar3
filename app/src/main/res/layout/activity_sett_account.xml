<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettAccount"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="تغير اسم المستخدم"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="تغير الموقع"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/location"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text=" تغير رقم الهاتف"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/phone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حفظ "
        android:textSize="30dp"
        android:onClick="SaveCs"
        android:id="@+id/login"
        tools:ignore="OnClick" />
    <EditText
        android:id="@+id/Newmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="  البريد الالكتروني الجديد"/>
    <EditText
        android:id="@+id/PasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="تأكيد كلمة المرور"
        />
    <Button
        android:id="@+id/ChEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="حفظ البريد الالكتروني الجديد"
        android:onClick="changE"
        />

</LinearLayout>