<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Charity_Info"
    android:orientation="vertical"
    android:layoutDirection="rtl"
   >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/InfoCharImg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"></com.mikhaellopez.circularimageview.CircularImageView>

        <ImageView
            android:id="@+id/vi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/InfoCharImg"
            android:layout_margin="4dp"
            android:src="@drawable/edit"
            android:visibility="gone"
            ></ImageView>
    </RelativeLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="اسم الجمعية :"
        android:layout_margin="10dp"
        android:textDirection="rtl"
        android:textColor="#005FFF"
        ></TextView>
        <TextView
            android:id="@+id/InfoChartxt"
            android:layout_width="match_parent"
            android:textColor="#005FFF"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="profile"
            android:layout_margin="10dp"
            android:textDirection="rtl"
            ></TextView></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="وصف الجمعية :"
            android:layout_margin="10dp"
            android:textDirection="rtl"
            android:textColor="#005FFF"
            ></TextView>
        <TextView
            android:id="@+id/InfoCharGoal"
            android:layout_width="match_parent"
            android:textColor="#005FFF"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="profile"
            android:layout_margin="10dp"
            android:textDirection="rtl"
            ></TextView></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="هدف الجمعية :"
            android:layout_margin="10dp"
            android:textDirection="rtl"
            android:textColor="#005FFF"
            ></TextView>
        <TextView
            android:id="@+id/InfoCharG"
            android:layout_width="match_parent"
            android:textColor="#005FFF"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="profile"
            android:layout_margin="10dp"
            android:textDirection="rtl"
            ></TextView></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="تاريخ تأسيس الجمعية :"
            android:layout_margin="10dp"
            android:textDirection="rtl"
            android:textColor="#005FFF"
            ></TextView>
        <TextView
            android:id="@+id/InfoCharDate"
            android:layout_width="match_parent"
            android:textColor="#005FFF"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="profile"
            android:layout_margin="10dp"
            android:textDirection="rtl"
            ></TextView></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phone"
            android:id="@+id/ph"></ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/visa"
            android:id="@+id/vii"></ImageView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/location"
            android:id="@+id/lo"></ImageView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="حملات الجمعية :"
        android:textDirection="rtl"
        android:layout_marginRight="10dp"
        android:textColor="#005FFF"
        ></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView6"
        />

    <ImageView
        android:id="@+id/addCamp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/plus"
        android:visibility="gone"
        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="قبول الجمعية"
            android:id="@+id/charAcc"
            android:background="@drawable/a2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:textSize="16dp"
            android:textColor="#0060FF"
            android:layout_gravity="center"
            android:visibility="gone"
            />
    </RelativeLayout>



</LinearLayout>