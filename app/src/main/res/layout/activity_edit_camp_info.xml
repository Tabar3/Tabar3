<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Camp_Info"
    android:orientation="vertical"
    android:layoutDirection="rtl">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgECamp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"></ImageView>

        <Button
            android:id="@+id/button_camp_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اضافة صورة"
            /></RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_alignParentStart="true"
        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="اسم الحملة:"
                android:layout_marginRight="10dp"
                android:textDirection="rtl"
                android:textColor="#005FFF"
                ></TextView>
    <EditText
        android:id="@+id/CampNameE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="وصف الحملة:"
                android:layout_marginRight="10dp"
                android:textDirection="rtl"
                android:textColor="#005FFF"
                ></TextView>
    <EditText
        android:id="@+id/CampDes1E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="تفاصيل الحملة:"
                android:layout_marginRight="10dp"
                android:textDirection="rtl"
                android:textColor="#005FFF"
                ></TextView>
    <EditText
        android:id="@+id/CampDes2E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>

            <Button
                android:id="@+id/edit3"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/a2"
                android:text="تعديل البيانات"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="#0060FF"
                ></Button>


        </LinearLayout>
    </ScrollView>
</LinearLayout>