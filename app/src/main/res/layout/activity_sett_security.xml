<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettSecurity"
    android:orientation="vertical">
    <EditText
        android:id="@+id/currP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="كلمة السر الحالية"/>
    <EditText
        android:id="@+id/newP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="كلمة السر الجديدة "/>
    <EditText
        android:id="@+id/confirmP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="تأكيد كلمة السر الجديدة"/>

    <Button
        android:id="@+id/ChPass"
        android:layout_width="match_parent"
        android:text="حفظ كلمة السر الجديدة"
        android:layout_height="60dp"
        android:onClick="changP"
        />
    <EditText
        android:id="@+id/Nemail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="  البريد الالكتروني الجديد"/>
    <Button
        android:id="@+id/ChEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="حفظ البريد الالكتروني الجديد"
        android:onClick="changE"
        />



</LinearLayout>