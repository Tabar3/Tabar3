<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:orientation="vertical"
    android:layoutDirection="rtl">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgChar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars"></ImageView>

        <Button
            android:id="@+id/button_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اضافة صورة"
            /></RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="البريد الالكتروني"
        android:textSize="16dp"
        android:textColor="#0060FF"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/userSign"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColorHint="#0060FF"
        android:textColor="#0060FF"
        android:inputType="textEmailAddress"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="كلمة المرور"
        android:textSize="16dp"
        android:textColor="#0060FF"
        />
    <EditText
        android:id="@+id/passSign"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColorHint="#0060FF"
        android:textColor="#0060FF"
        android:inputType="textPassword"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اسم المستخدم"
        android:textSize="16dp"
        android:textColor="#0060FF"
        />
    <EditText
        android:id="@+id/userNameS"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColorHint="#0060FF"
        android:textColor="#0060FF"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رقم الهاتف"
        android:textSize="16dp"
        android:textColor="#0060FF"
        />
    <EditText
        android:id="@+id/PhoneNSign"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColorHint="#0060FF"
        android:textColor="#0060FF"
        android:inputType="phone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الموقع (رابط)"
        android:textSize="16dp"
        android:textColor="#0060FF"
        />
    <EditText
        android:id="@+id/LocationSign"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColorHint="#0060FF"
        android:textColor="#0060FF"
        android:inputType="text"
        />
            <TextView
                android:id="@+id/AccT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="هل انت :"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:textColor="#0060FF"
                />
            <RadioGroup
                android:id="@+id/G1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <RadioButton
                    android:id="@+id/CharCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="جمعية"
                    android:textSize="22dp"
                    android:textColor="#0060FF"
                    android:textStyle="bold"

                    />
                <RadioButton
                    android:id="@+id/DonatCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="مستخدم"
                    android:textSize="22dp"
                    android:textColor="#0060FF"
                    android:textStyle="bold"
                    />
            </RadioGroup>






    <Button
        android:id="@+id/SignUp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/a2"
        android:layout_marginTop="20dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#0060FF"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        android:text="sign up"
        android:onClick="signUp"
        />

        </LinearLayout>
    </ScrollView>
</LinearLayout>